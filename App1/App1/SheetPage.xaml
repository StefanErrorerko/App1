<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.SheetPage">
    <!--<ContentPage.BindingContext>
        <local:SheetPageViewModel />
    </ContentPage.BindingContext>-->

    <Grid BackgroundColor="SteelBlue">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"  />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"  />
            <ColumnDefinition Width="50" />
            <ColumnDefinition Width="50" />
            <ColumnDefinition Width="50" />
            <ColumnDefinition Width="50" />
        </Grid.ColumnDefinitions>

        <ImageButton 
            x:Name="ButtonAddAppoint" 
            Grid.Row="0" 
            Grid.Column="1" 
            Source="icon_calendar.png" 
            Command="{Binding AddAppointment}" />
        <ImageButton 
            x:Name="ButtonAddTodo" 
            Grid.Row="0" 
            Grid.Column="2"
            Source="icon_checkbox.png" 
            Command="{Binding AddTodo}" />
        <ImageButton 
            x:Name="ButtonClearSheet" 
            Grid.Row="0" 
            Grid.Column="3" 
            Source="icon_broom.png" 
            Command="{Binding ClearSheet}" />
        <ImageButton 
            x:Name="ButtonInfo" 
            Grid.Row="0" 
            Grid.Column="4" 
            Source="icon_info.png" 
            Command="{Binding ProvideInfo}" />

        <Frame Grid.Row="1" Grid.ColumnSpan="5" CornerRadius="1" Margin="10,10,10,10" BackgroundColor="AliceBlue">
            <Editor x:Name="MainSheet"
                TextColor="{Binding SheetTextColor}"
                Text="{Binding SheetText}" 
                />
        </Frame>
    </Grid>



</ContentPage>
